{% extends "CanalTPMttBundle::generic_list.html.twig" %}

{% block list_title -%}
    {{'network.list'|trans({}, 'default')}}
{% endblock %}

{% block table_head -%}
    <th>{{'network.external_coverage_id'|trans({}, 'default')}}</th>
    <th>{{'network.external_id'|trans({}, 'default')}}</th>
{% endblock %}

{% block table_body -%}
    {% if networks|length == 0 %}
        <tr>
            <td colspan="4">
                {{'global.no_items'|trans}}
            </td>
        </tr>
    {% else %}
        {% for network in networks %}
            <tr>
                <td>
                    {{ network.externalCoverageId }}
                </td>
                <td>
                    {{ network.externalId }}
                </td>
            </tr>
        {% endfor %}
    {% endif %}
{% endblock %}