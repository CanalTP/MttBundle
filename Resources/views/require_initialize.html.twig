{% spaceless %}

{# RequireJS initialization. Recognized variables:
 # config (optional)
 #   The RequireJS config array
 # main (optional)
 #   A module to require immediately when RequireJS is loaded
 #}

{% if config is defined and config is not empty %}
    {% block configuration %}
        <script type="text/javascript">
        var require = {
            baseUrl: '{{app.request.basePath}}/',
            // waitSeconds: 1,
            // urlArgs : "bust="+new Date().getTime(),
            paths: {
                // libs
                jquery:         'js/jquery',
                bootstrap:      'js/bootstrap',
                fosjsrouting:   'bundles/fosjsrouting/js/router',
                sf_routes:      '{{ path('fos_js_routing_js', {"callback": "fos.Router.setData"}) }}',
                // meth specific
                meth_left_menu: 'bundles/canaltpmeth/js/left_menu',
                meth_layout:    'bundles/canaltpmeth/js/layout',
            },
            shim: {
                bootstrap: {
                    deps: ['jquery']
                }
            },
            deps: ["jquery", "bootstrap", "fosjsrouting", "sf_routes"],
            // callback: function($, bootstrap, fosjsrouting) {
                //This function will be called when all the dependencies
                //listed above in deps are loaded. 
                // fos.Router.setData();
            //}
        };
        </script>
    {% endblock configuration %}
{% endif %}

{% block require_js %}
    {# Applications may override the src block to use a custom URL #}
    <script type="text/javascript"{% if main is defined and main is not empty %} data-main="{{ main }}?{{"now" |date('U')}}"{% endif %} src="{% block src require_js_src() %}"></script>
{% endblock require_js %}

{% endspaceless %}