{% block common_modal %}
    <div class="modal-dialog">
        {% block open_form %}{% endblock %}
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                <h4 class="modal-title">{% block modal_title %}{% endblock %}</h4>
            </div>
            <div class="modal-body">
                {% block modal_body %}{% endblock %}
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">{{'global.close'|trans}}</button>
                {% block modal_actions %}
                    <button type="button" class="btn btn-primary">{{'global.save'|trans}}</button>
                {% endblock %}
            </div>
        </div><!-- /.modal-content -->
    </div><!-- /.modal-dialog -->
{% endblock %}
